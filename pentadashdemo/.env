# Pentadash Demo Environment Configuration
# Created for UI QC and Review Purposes

# Node Environment
NODE_ENV=development

# Server Ports (Different from production to avoid conflicts)
PORT=9444
WEB_PORT=9443

# Database
DB_PATH=./data/database/dashboard-demo.db

# JWT Secret (Demo only - not for production)
JWT_SECRET=demo-pentadash-secret-key-2025

# Session Timeout (60 minutes)
SESSION_TIMEOUT=3600000

# 3CX Server Details (Using demo/simulated data)
TCX_FQDN=pentanet.3cx.com.au
TCX_PORT=5001
TCX_EXTERNAL_IP=175.45.85.203
TCX_INTERNAL_IP=10.71.80.223
TCX_VERSION=20.0.7.1057

# 3CX API Credentials (Demo mode - using simulated data)
TCX_XAPI_CLIENT_ID=demo-client-id
TCX_XAPI_CLIENT_SECRET=demo-client-secret
TCX_CALLCONTROL_CLIENT_ID=demo-callcontrol-id
TCX_CALLCONTROL_CLIENT_SECRET=demo-callcontrol-secret

# Email Configuration (Optional for demo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=demo@pentanet.com.au
SMTP_PASS=demo-password
ALERT_RECIPIENTS=review@pentanet.com.au,qc@pentanet.com.au

# Demo Mode Settings
DEMO_MODE=true
USE_SIMULATED_DATA=true
ENABLE_LIVE_FEEDS=true

# Infrastructure Monitoring (Enable live feeds for demo)
ENABLE_NBN_MONITORING=true
ENABLE_POWER_MONITORING=true
ENABLE_FIRE_MONITORING=true
MONITORING_INTERVAL=300000

# Logging
LOG_LEVEL=debug
